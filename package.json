{
   "name": "mq-defs",
   "displayName": "mq-defs",
   "description": "MacroQuest Lua Language Definitions",
   "version": "1.0.9",
   "repository": {
      "type": "git",
      "url": "https://github.com/johnfking/mq-defs"
   },
   "publisher": "zenithcodeforge",
   "engines": {
      "vscode": "^1.94.0"
   },
   "categories": [
      "Other"
   ],
   "activationEvents": [
      "onLanguage:lua"
   ],
   "main": "./out/extension.js",
   "contributes": {
      "configuration": {
         "type": "object",
         "title": "MQ Definitions Configuration",
         "properties": {
            "mq-defs.limit-notifications": {
               "order": 0,
               "type": "boolean",
               "default": true,
               "description": "Only notify when new Definitions are loaded."
            },
            "mq-defs.shaKey": {
               "order": 2,
               "type": "string",
               "default": "",
               "description": "SHA key for checking updates of MacroQuest Definitions. Clear this value to force re-download."
            },
            "mq-defs.branch": {
               "order": 1,
               "type": "string",
               "default": "master",
               "description": "Branch for MacroQuest Definitions."
            }
         }
      },
      "commands": [
         {
            "command": "mq-defs.download",
            "title": "MQ: Download Definitions"
         }
      ]
   },
   "extensionDependencies": [
      "mindaro-dev.file-downloader",
      "sumneko.lua"
   ],
   "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile && npm run lint",
      "lint": "eslint src --ext ts",
      "test": "node ./out/test/runTest.js",
      "test:unit": "npm run compile && mocha --ui tdd \"out/test/unit/**/*.test.js\""
   },
   "devDependencies": {
      "@types/mocha": "^10.0.10",
      "@types/node": "22.x",
      "@types/sinon": "^21.0.0",
      "@types/vscode": "^1.94.0",
      "@typescript-eslint/eslint-plugin": "^8.56.1",
      "@typescript-eslint/parser": "^8.56.1",
      "@vscode/test-electron": "^2.5.2",
      "@vscode/vsce": "^3.7.1",
      "eslint": "^10.0.2",
      "glob": "^13.0.6",
      "mocha": "^11.7.5",
      "sinon": "^21.0.1",
      "typescript": "^5.7.3",
      "typescript-eslint": "^8.56.1"
   },
   "dependencies": {
      "@microsoft/vscode-file-downloader-api": "^1.0.1",
      "axios": "^1.13.5"
   }
}
